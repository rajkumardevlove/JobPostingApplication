<div class="container mt-5">
  <div class="card shadow-lg">
    <div class="card-body">
      <h2 class="card-title text-center mb-4 job-title-modern">
  <%= @job.title %>
</h2>

<style>
  .job-title-modern {
    font-size: 2.75rem;
    font-weight: 800;
    background: linear-gradient(90deg, #0d6efd, #6610f2);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
    transition: transform 0.2s ease-in-out;
    font-family: 'Segoe UI', 'Roboto', 'Helvetica Neue', sans-serif;
  }

  .job-title-modern:hover {
    transform: scale(1.03);
    text-shadow: 2px 2px 4px rgba(0,0,0,0.15);
  }
</style>

      <div class="mb-3">
        <p class="mb-1"><strong>Company Name:</strong></p>
        <p class="text-muted"><i class="bi bi-building"></i> <%= @job.company_name %></p>
      </div>

      <div class="mb-3">
        <p class="mb-1"><strong>Location:</strong></p>
        <p class="text-muted"><i class="bi bi-geo-alt"></i> <%= @job.location %></p>
      </div>

      <div class="mb-3">
        <p class="mb-1"><strong>Job Description:</strong></p>
        <p class="text-muted"><%= simple_format(@job.description) %></p>
      </div>

      <hr>

      <% if user_signed_in? && current_user.admin? %>
        <div class="d-flex flex-wrap gap-2">
          <%= link_to "Edit Job", edit_job_path(@job), class: "btn btn-warning" %>
          <%= button_to "Delete Job", job_path(@job), method: :delete, data: { confirm: "Are you sure you want to delete this job?" }, class: "btn btn-danger" %>
          <%= link_to "Back to Jobs", jobs_path, class: "btn btn-secondary" %>
        </div>
      <% elsif user_signed_in? && !current_user.admin? %>
        <div class="d-flex flex-wrap gap-2">
          <%= button_to "Apply Now", job_applications_path(@job), method: :post, class: "btn btn-primary" %>
          <%= link_to "Back to Jobs", jobs_path, class: "btn btn-secondary" %>
        </div>
      <% else %>
        <div class="text-center mt-3">
          <%= link_to "Back to Jobs", jobs_path, class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
