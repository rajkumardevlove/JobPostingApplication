<turbo-frame id="job_details">
  <!-- ⬇︎ your original markup starts here ⬇︎ -->
  <div class="container mt-5">
    <div class="card shadow-lg">
      <div class="card-body">
        <h2 class="card-title text-center mb-4 job-title-modern">
          <%= @job.title %>
        </h2>

        <%# …rest of the code you pasted, unchanged… %>

        <%# ----- BUTTONS ----- %>
        <% if user_signed_in? && current_user.admin? %>
          <div class="d-flex flex-wrap gap-2">
            <%= link_to "Edit Job",
                        edit_job_path(@job),
                        data: { turbo_frame: "job_details" },
                        class: "btn btn-warning" %>

            <%= button_to "Delete Job",
                          job_path(@job),
                          method: :delete,
                          form: { data: { turbo_confirm: "Are you sure?" } },
                          class: "btn btn-danger" %>

            <%= link_to "Back to Jobs",
                        jobs_path,
                        class: "btn btn-secondary" %>
          </div>

        <% elsif user_signed_in? %>
          <div class="d-flex flex-wrap gap-2">
            <%= button_to "Apply Now",
                          job_applications_path(@job),
                          method: :post,
                          data: { turbo_frame: "job_details" },
                          class: "btn btn-primary" %>

            <%= link_to "Back to Jobs",
                        jobs_path,
                        class: "btn btn-secondary" %>
          </div>

        <% else %>
          <div class="text-center mt-3">
            <%= link_to "Back to Jobs",
                        jobs_path,
                        class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</turbo-frame>
